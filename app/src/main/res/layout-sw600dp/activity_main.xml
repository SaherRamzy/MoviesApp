<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b439a"
    android:id="@+id/activity_main"
    tools:context="com.code.saher.moviesapp.MainActivity">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.code.saher.moviesapp.Fragments.MainFragment"
        android:id="@+id/main_fragment"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.code.saher.moviesapp.Fragments.DetailsFragment"
        android:id="@+id/description_fragment"
        android:layout_weight="2" />

</LinearLayout>
